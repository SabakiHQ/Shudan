{
  "name": "@sabaki/shudan",
  "version": "1.6.2",
  "description": "A highly customizable, low-level Preact Goban component.",
  "main": "./src/main.js",
  "types": "./src/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SabakiHQ/Shudan.git"
  },
  "keywords": [
    "go",
    "weiqi",
    "baduk",
    "goban",
    "boardgame",
    "ui",
    "component",
    "preact",
    "react"
  ],
  "author": "Yichuan Shen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SabakiHQ/Shudan/issues"
  },
  "homepage": "https://github.com/SabakiHQ/Shudan",
  "peerDependencies": {
    "preact": "^8.4.2 || 10.x"
  },
  "dependencies": {
    "classnames": "^2.3.1"
  },
  "devDependencies": {
    "@sabaki/go-board": "^1.4.2",
    "onchange": "^7.1.0",
    "preact": "^10.5.14",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0"
  },
  "prettier": {
    "proseWrap": "always"
  },
  "scripts": {
    "build-demo": "webpack --entry ./demo/main.js -o ./demo --output-filename bundle.js --progress --mode production",
    "watch-demo": "webpack --entry ./demo/main.js -o ./demo --output-filename bundle.js --progress --mode development --watch",
    "build-demo-react": "webpack --entry ./demo-react/main.js --resolve-alias preact=react -o ./demo-react --output-filename bundle.js --progress --mode production",
    "watch-demo-react": "webpack --entry ./demo-react/main.js --resolve-alias preact=react -o ./demo-react --output-filename bundle.js --progress --mode development --watch",
    "format": "prettier \"**/*.{js,html,md}\" --write",
    "format-watch": "onchange \"**/*.{js,html,md}\" -- prettier --write {{changed}}"
  }
}
